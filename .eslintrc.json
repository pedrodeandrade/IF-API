{
    "settings": {
      "import/resolver": {
        "typescript": {}
      },
      "import/parsers": {
        "@typescript-eslint/parser": [".ts"]
      }
    },
    "env": {
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "rules": {
      "space-before-function-paren": "error",
      "no-underscore-dangle": "off"
    }
}
